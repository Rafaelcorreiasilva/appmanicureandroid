<PerfilClientePage>:
    FloatLayout:
    # Banner com o nome da página

        #Botão de escolher cliente
        ScrollView:
            pos_hint: {"right":1, "top": 0.9}
            size_hint: 1, 0.39
            GridLayout:
                rows: 1
                id: escolher_cliente
                size_hint_x: None
                #spacing: 3, 3
                width: self.minimum_width
                col_default_width: "200dp"
                col_force_default: True

        # Caixa de informações
        GridLayout:
            pos_hint:{"right": 0.9 ,"top": 0.60 }
            size_hint: 0.8 , 0.45
            rows: 6
            cols: 2


            Label:
                id: nomecliente
                text:""
            Label:
                id: nascimentocliente
                text:""
            Label:
                id: celularcliente
                text:""
            Label:
                id:emailcliente
                text:""
            Label:
                id: enderecocliente
                text:""
            Label:
                id: bairrocliente
                text: ""
            Label:
                id:cidadecliente
                text:""
            Label:
                id:estadocliente
                text:""

         # Botão voltar

        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release:  app.mudar_tela('inicialpage')
            text: "voltar"
            pos_hint: {"right": 0.25 , "top": 0.15}
            size_hint: 0.25, 0.15

        # Botão cadastrar cliente


        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("cadastroclientepage")
            text: "Cadastrar Cliente"
            pos_hint: {"right": 0.98, "top": 0.15}
            size_hint: 0.25, 0.15