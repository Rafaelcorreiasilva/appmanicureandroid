<EntradaPage>:
    FloatLayout:

        Label:
            pos_hint: {"right": 1 , "top":1}
            size_hint: 1, 0.05
            text:"Selecione o Fornecedor"
            id: selecione_fornecedor

        ScrollView:
            pos_hint: {"right":1, "top": 0.95}
            size_hint: 1, 0.10
            GridLayout:
                rows: 1
                id: fornecedor_estoque
                size_hint_x: None
                #spacing: 2, 2
                width: self.minimum_width
                col_default_width: "200dp"
                col_force_default: True
        Label:
            pos_hint: {"right": 1 , "top":0.82}
            size_hint: 1, 0.05
            text:"Selecione o Produto"
            id: selecione_produto
        ScrollView:
            pos_hint: {"right":1, "top": 0.80}
            size_hint: 1, 0.18
            GridLayout:
                rows: 1
                id: produtos_estoque
                size_hint_x: None
                #spacing: 2, 2
                width: self.minimum_width
                col_default_width: "200dp"
                col_force_default: True

        Label:
            id: label_data
            pos_hint: {"right":1, "top": 0.5}
            size_hint: 1, 0.05
            bold: True
            text: "Data: 01/01/2021"
        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"

            on_release: app.entrada_produto()
            text: "Entrada"
            pos_hint: {"right": 0.45 , "top": 0.2}
            size_hint: 0.4, 0.2


        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release:  app.mudar_tela('estoquepage')
            text: "voltar"
            pos_hint: {"right": 0.95 , "top": 0.2}
            size_hint: 0.4, 0.2

         # selecionar unidade
        GridLayout:
            rows: 1
            pos_hint: {"right":0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            Label:
                text: ""
                id: mensagem_add

        # preco unidade
        GridLayout:
            rows: 1
            pos_hint: {"right":0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                text: "Preço unitário (R$)"
                id:text_preco
            TextInput:
                id: preco_unitario
                hint_text: "Digite apenas números"

        # quantidade
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            Label:
                text: "Quantidade Total"
                id: text_quantidade
            TextInput:
                id: quantidade
                hint_text: "0"

