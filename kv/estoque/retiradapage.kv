<RetiradaPage>:
    FloatLayout:

        Label:
            pos_hint: {"right": 1 , "top":0.95}
            size_hint: 1, 0.05
            text:"Selecione o Produto"
            id: selecione_produto

        ScrollView:
            pos_hint: {"right":1, "top": 0.85}
            size_hint: 1, 0.39
            GridLayout:
                rows: 1
                id: produto_estoque
                size_hint_x: None
                #spacing: 3, 3
                width: self.minimum_width
                col_default_width: "200dp"
                col_force_default: True


        Label:
            id: label_data
            pos_hint: {"right":1, "top": 0.5}
            size_hint: 1, 0.05
            bold: True
            text: ""
        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"

            on_release: app.retirada_produto()
            text: "Retirar"
            pos_hint: {"right": 0.45 , "top": 0.2}
            size_hint: 0.4, 0.2


        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release:  app.mudar_tela('estoquepage')
            text: "voltar"
            pos_hint: {"right": 0.95 , "top": 0.2}
            size_hint: 0.4, 0.2

         # selecionar unidade
        GridLayout:
            rows: 1
            pos_hint: {"right":0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            Label:
                text: ""
                id: mensagem_add




        # quantidade
        GridLayout:
            rows: 1
            pos_hint: {"right":0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                text: "Quantidade"
                id: text_quantidade
            TextInput:
                id: quantidade
                hint_text: "apenas n√∫mero"
        GridLayout:
            rows: 1
            pos_hint: {"right":0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            Label:
                text: ""
                id: mensagem_add

