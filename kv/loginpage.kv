<LoginPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

    # Foto de perfil

        Image:
            pos_hint:{"right": 1 ,"top": 0.9 }
            size_hint:1, 0.2
            source:"icones/fotos_perfil/foto1.png"

        Label:
            text: "Controle seu [color=#00CFDB]negócio[/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9 , "top": 0.7}
            size_hint: 0.8, 0.2

        TextInput:
            id: email
            hint_text: "E-mail"
            pos_hint: {"right": 0.9 , "top": 0.5}
            size_hint: 0.8, 0.1

        TextInput:
            id: senha
            password: True
            hint_text: "Senha"
            pos_hint: {"right": 0.9 , "top": 0.35}
            size_hint: 0.8, 0.1

        Label:
            id: mensagem_login
            text: "[color=#00CFDB]Faça seu login[/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9 , "top": 0.27}
            size_hint: 0.8, 0.1


        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"

            on_release:app.firebase.fazer_login(email.text,senha.text)
            text: "Faça seu Login"
            pos_hint: {"right": 0.45 , "top": 0.16}
            size_hint: 0.4, 0.10


        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release:  app.mudar_tela("cadastropage")
            text: "Criar Conta"
            pos_hint: {"right": 0.95 , "top": 0.16}
            size_hint: 0.4, 0.10