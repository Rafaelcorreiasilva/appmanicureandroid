<AgendaPage>:
    FloatLayout:

        Label:
            pos_hint: {"right": 1 , "top":1}
            size_hint: 1, 0.05
            text:"Agenda"
            id: agenda

        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.95 , "top": 0.30}
            size_hint: 0.4, 0.2
            text: "Agendar"
            on_release:  app.mudar_tela('agendamentopage')






        # Bot√µes de cancelar

        LabelButton:
            pos_hint: {"right": 0.45 , "top": 0.30}
            size_hint: 0.4, 0.2
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            text: "Cancelar Agendamento"
            on_release: print('cancelar_agendamento')

        LabelButton:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size: self.size
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release:  app.mudar_tela('inicialpage')
            text: "Voltar"
            pos_hint: {"right": 0.25 , "top": 0.15}
            size_hint: 0.25, 0.15



         #Scroll agenda
        ScrollView:
            pos_hint:{"right": 0.9 ,"top": 0.85}
            size_hint: 0.8,0.45
            GridLayout:
                cols:1
                id: agenda_lista
                size_hint_y: None
                #spacing: 3,3
                height: self.minimum_height
                row_default_height: "50dp"
                row_force_default: True